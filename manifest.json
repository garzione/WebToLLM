{
  "manifest_version": 3,
  "name": "WebToLLM",
  "version": "1.0",
  "description": "Effortlessly capture HTML, CSS, and screenshots from any website to recreate cool UI components using large language models.",
  "permissions": ["activeTab", "contextMenus", "downloads", "clipboardWrite"],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/html2canvas.min.js", "scripts/content_script.js"],
      "css": ["css/overlay.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "css/overlay.css",
        "libs/html2canvas.min.js",
        "scripts/logging.js",
        "icons/logo/web2llm.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/logo/web2llm.png",
    "48": "icons/logo/web2llm.png",
    "128": "icons/logo/web2llm.png"
  },
  "commands": {
    "capture_element": {
      "suggested_key": {
        "default": "Ctrl+Shift+C"
      },
      "description": "Capture element"
    },
    "download_txt": {
      "suggested_key": {
        "default": "Ctrl+Shift+T"
      },
      "description": "Download data as TXT"
    },
    "download_json": {
      "suggested_key": {
        "default": "Ctrl+Shift+J"
      },
      "description": "Download data as JSON"
    },
    "copy_to_clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Copy data to clipboard"
    }
  }
}
